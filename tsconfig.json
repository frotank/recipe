{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    /* Core settings */
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",

    /* TypeScript behavior */
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Path aliases (optional but useful) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },

  /* Make sure these folders are included for Expo Router projects */
  "include": [
    "app",
    "src",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
